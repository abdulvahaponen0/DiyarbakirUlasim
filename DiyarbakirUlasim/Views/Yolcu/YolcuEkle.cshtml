@using Entities
@model Yolcu
@{
    ViewData["Başlık"] = "Kullanıcı Kayıt";
}

<form asp-action="YolcuEkle" method="post" class="w-50 mx-auto border p-4 shadow rounded">
    <h2>Sisteme Kayıt Ol Formu</h2>
    <div class="form-group mb-3">
        <label asp-for="Ad" class="form-label"></label>
        <input asp-for="Ad" placeholder="Lütfen adınız giriniz..." class="form-control"/>
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="SoyAd" class="form-label"></label>
        <input asp-for="SoyAd" placeholder="Lütfen soyadınız giriniz..." class="form-control" />
        <span asp-validation-for="SoyAd" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="EMail" class="form-label"></label>
        <input asp-for="EMail" placeholder="Lütfen email adresinizi giriniz..." class="form-control" />
        <span asp-validation-for="EMail" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Sifre" class="form-label"></label>
        <input asp-for="Sifre" placeholder="Lütfen şifrenizi giriniz..." class="form-control" />
        <span asp-validation-for="Sifre" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="TelefonNumarasi" class="form-label"></label>
        <input asp-for="TelefonNumarasi" placeholder="Lütfen şifrenizi giriniz..." class="form-control" />
        <span asp-validation-for="TelefonNumarasi" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Adres" class="form-label"></label>
        <input asp-for="Adres" placeholder="Lütfen adresiniz giriniz..." class="form-control" />
        <span asp-validation-for="Adres" class="text-danger"></span>
    </div>
    <button type="submit">Yolcu Ekle</button>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}