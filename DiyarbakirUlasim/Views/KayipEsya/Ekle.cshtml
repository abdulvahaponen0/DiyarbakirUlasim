@using Entities
@model KayipEsya
<form asp-action="Ekle" method="post" class="w-50 mx-auto border p-4 shadow rounded">
    <h2>Kayıp eşya bildirimi</h2>
    <div class="form-group mb-3">
        <label asp-for="AdSoyad" class="form-label"></label>
        <input asp-for="AdSoyad" placeholder="Lütfen adınızı soyadınızı giriniz..." class="form-control" />
        <span asp-validation-for="AdSoyad" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="TelefonNumarasi" class="form-label"></label>
        <input asp-for="TelefonNumarasi" placeholder="Lütfen kart numarasını giriniz..." class="form-control" />
        <span asp-validation-for="TelefonNumarasi" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" placeholder="Lütfen kartınızın son kullanma tarihini giriniz..." class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="HatAdi" class="form-label"></label>
        <input asp-for="HatAdi" placeholder="Lütfen kartınızın güvenlik kodunu giriniz..." class="form-control" />
        <span asp-validation-for="HatAdi" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Tarih" class="form-label"></label>
        <input type="date" asp-for="Tarih" class="form-control" />
        <span asp-validation-for="Tarih" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Zaman" class="form-label"></label>
        <input type="time" asp-for="Zaman" class="form-control" />
        <span asp-validation-for="Zaman" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="IndiginizDurak" class="form-label"></label>
        <input asp-for="IndiginizDurak" placeholder="Lütfen kartınıza eklemek istediğiniz tutarı giriniz..." class="form-control" />
        <span asp-validation-for="IndiginizDurak" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Tanim" class="form-label"></label>
        <input asp-for="Tanim" placeholder="Lütfen kartınıza eklemek istediğiniz tutarı giriniz..." class="form-control" />
        <span asp-validation-for="Tanim" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Not" class="form-label"></label>
        <input asp-for="Not" placeholder="Lütfen kartınıza eklemek istediğiniz tutarı giriniz..." class="form-control" />
        <span asp-validation-for="Not" class="text-danger"></span>
    </div>
    <button type="submit">Kayıp eşya bildirimi gönder</button>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}