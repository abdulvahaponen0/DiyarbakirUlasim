<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DiyarbakirUlasim</title>
    <script type="importmap"></script>


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DiyarbakirUlasim.styles.css" asp-append-version="true" />
    <style>
        .navbar-nav .nav-link {
            transition: background-color 0.3s ease, color 0.3s ease;
            border-radius: 0.5rem;
            padding: 0.5rem 1rem;
        }

        .navbar-nav .nav-link:hover {
            background-color: #f2f2f2; /* açık gri */
            color: #000000; /* siyah yazı */
            text-decoration: none;
        }
    </style>
</head>
<body>
    <header>
       
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")">Diyarbakır Ulaşım</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNavCentered" aria-controls="navbarNavCentered"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-center" id="navbarNavCentered">
                    <ul class="navbar-nav">
                        <li class="nav-item mx-2">
                            <a class="nav-link text-dark" href="@Url.Action("Index", "Home")">Anasayfa</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-dark" href="@Url.Action("Ekle", "KayipEsya")">Kayıp Eşya</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-dark" href="@Url.Action("Ekle", "Iletisim")">İletişim</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-dark" href="@Url.Action("Giris", "YolcuLogin")">Hakkımızda</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-dark" href="@Url.Action("Login", "Yolcu")">Giriş Yap</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-dark" href="@Url.Action("Profil", "Yolcu")">Profil</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-dark" href="@Url.Action("LogOut", "Yolcu")">Çıkış Yap</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>



    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - DiyarbakirUlasim - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</html>
